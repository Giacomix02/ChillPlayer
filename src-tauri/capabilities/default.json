{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:read-dirs",
    "fs:read-files",
    "fs:allow-home-read",
    "fs:allow-data-read",
    "opener:default",
    "dialog:default",
    "fs:allow-read",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-app-read",
    {
      "identifier":"fs:allow-app-read",
      "allow": [
        "$AUDIO/**",
        "$DOCUMENTS/**",
        "$HOME/**",
        "$DOWNLOAD/**"
      ]
    }
  ]
}